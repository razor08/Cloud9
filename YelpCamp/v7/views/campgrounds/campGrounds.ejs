<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h2 style="text-align: center;">Welcome to the Camp Grounds Home Page!</h2>
        <div style="width:30%; margin:25px auto;">
        <form action="/campGrounds/new" method="POST">
            <div class="form-group">
            <input class="form-control" type="text" name="campground[name]" placeholder="Enter the name" ></input>
            </div>
            <div class="form-group">
            <input class="form-control" type="text" name="campground[price]" placeholder="Enter price per night" min="0.01" step="0.01"></input>
            </div>
            <div class="form-group">
            <input class="form-control" type="text" name="campground[image]" placeholder="Enter image url" ></input>
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="campground[description]" placeholder="Enter description"></textarea>
            </div>
            <input class="btn btn-lg btn-primary btn-block" type="submit"></input>
        </form>
        </div>
    </div>
    

<% cgs.forEach(function(cgs){ %>
    <li><a href="/campgrounds/<%= cgs._id %>"><%= cgs.name %></a></li>
<% }) %>

</div>
<% include ../partials/footer %>