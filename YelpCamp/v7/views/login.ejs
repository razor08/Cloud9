<% include ./partials/header %>
<div class="container">
    <div class="row">
    <h2 style="text-align: center;">Login!</h2> 
    <div style="width:36%; margin:25px auto;">
    <form action="/login" method="POST">
    <div class="form-group">
    <input class="form-control" type="text" placeholder = "Enter username" name="username"></input>
    </div>
    <div class="form-group">
    <input class="form-control" type="password" placeholder="Enter password" name="password"></input>
    </div>
    
    <input style="margin-top:10px;" class="btn btn-lg btn-primary btn-block" type="submit" value="Login"></input>
    </form>
    <h2 style="text-align: center;">OR</h2> 
    <div class="form-group" style="display:inline;margin:10px;">
    <a href="/login/google"><button class="ui google plus button">
      <i class="google plus icon"></i>
             Google+
    </button></a></div>
    <div class="form-group" style="display:inline;margin:10px;">
    <a href="/login/facebook"><button  class="ui facebook button">
      <i class="facebook icon"></i>
          Facebook
    </button></a></div>
    <div class="form-group" style="display:inline;margin:10px;">
    <a href="/login/github"><button class="ui github button">
      <i class="github icon"></i>
          Github
    </button></a></div>

</div>
</div>
</div>
<% include ./partials/footer %>